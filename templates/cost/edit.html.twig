{% extends 'base.html.twig' %}

{% block title %}Captain Log - Cost{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-center gap-4">

        {{ form_start(form) }}

        {{ form_widget(form._token) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
            <legend class="fieldset-legend">Cost</legend>

            <div class="col-span-2">
                <div class="alert alert-info alert-outline shadow-sm w-full">
                    <div class="flex items-center gap-3">
                        {% include 'icons/cost.html.twig' %}
                        <div>
                            <h3 class="font-semibold">Track your outflows</h3>
                            <p class="text-sm opacity-80">Log maintenance, gear and travel: knowing where credits slip helps prep the next jump.</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if cost.id %}
                <div>
                    <label class="label">Code</label>
                    <div><b>{{ cost.code }}</b></div>
                </div>
                <div></div>
            {% endif %}

            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div>
                {{ form_label(form.amount) }}
                {{ form_widget(form.amount) }}
                {{ form_errors(form.amount) }}
            </div>

            <div>
                {{ form_label(form.paymentDay) }}
                {{ form_widget(form.paymentDay) }}
                {{ form_errors(form.paymentDay) }}
            </div>

            <div>
                {{ form_label(form.paymentYear) }}
                {{ form_widget(form.paymentYear) }}
                {{ form_errors(form.paymentYear) }}
            </div>

            <div>
                {{ form_label(form.company) }}
                {{ form_widget(form.company) }}
                {{ form_errors(form.company) }}
            </div>

            <div>
                {{ form_label(form.costCategory) }}
                {{ form_widget(form.costCategory) }}
                {{ form_errors(form.costCategory) }}
            </div>

            <div>
                {{ form_label(form.ship) }}
                {{ form_widget(form.ship) }}
                {{ form_errors(form.ship) }}
            </div>

            <div>
                {{ form_label(form.localLaw) }}
                {{ form_widget(form.localLaw) }}
                {{ form_errors(form.localLaw) }}
            </div>

            <div class="col-span-2">
                {{ form_label(form.note) }}
                {{ form_widget(form.note) }}
                {{ form_errors(form.note) }}
            </div>

        </fieldset>

        <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">
            Save
        </button>
        <a href="{{ path('app_cost_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form, { render_rest: false }) }}
    
    </div>

{% endblock %}
