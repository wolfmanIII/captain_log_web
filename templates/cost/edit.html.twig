{% extends 'base.html.twig' %}

{% block title %}Captain Log - Cost{% endblock %}

{% block pageContent %}
    {% set CAN_CREATE = constant('App\\Security\\Voter\\CostVoter::CREATE') %}
    {% set CAN_EDIT = constant('App\\Security\\Voter\\CostVoter::EDIT') %}
    {% set can_create = is_granted(CAN_CREATE, cost) %}
    {% set can_edit = is_granted(CAN_EDIT, cost) %}
    {% import '_tooltip.html.twig' as tooltip %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        {{ form_widget(form._token) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Cost</legend>

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/cost.html.twig' %}
                        </div>
                        <div class="flex-1">
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Mission outflows</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Track your outflows</h3>
                            <p class="text-sm text-cyan-100/80">Log maintenance, gear and travel: knowing where credits slip helps prep the next jump.</p>
                        </div>
                        {% if cost.id %}
                            <div class="flex items-start gap-2">
                                {{ tooltip.link('Open cost PDF',
                                                'Cost PDF',
                                                'icons/pdf.html.twig',
                                                path('app_cost_pdf', { id: cost.id }),
                                                { dim: 16, linkClass: 'btn btn-outline btn-secondary btn-sm', attrs: { target: '_blank', rel: 'noopener' } }) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if cost.id %}
                <label class="block text-slate-300">Code</label>
                <div class="m-1 w-full"><b>{{ cost.code }}</b></div>
            {% endif %}

            <div class="col-span-2">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="col-span-2">
                <div class="alert alert-info alert-outline shadow-sm mt-2">
                    <span class="flex items-center justify-center animate-spin-slow">
                        {% include 'icons/radar.html.twig' %}
                    </span>
                    <div class="text-xs text-slate-200">
                        Select a campaign to unlock the ship list for this cost.
                    </div>
                </div>
            </div>

            <div class="col-span-2 grid grid-cols-2 gap-4" data-controller="campaign-ship">
                <div>
                    {{ form_label(form.campaign) }}
                    {{ form_widget(form.campaign) }}
                    {{ form_errors(form.campaign) }}
                </div>
                <div>
                    {{ form_label(form.ship) }}
                    {{ form_widget(form.ship) }}
                    {{ form_errors(form.ship) }}
                </div>
            </div>

            <div class="col-span-2 grid grid-cols-2 gap-4">
                <div>
                    {% set amount_help_id = form.amount.vars.id ~ '-help' %}
                    <div class="flex items-center gap-2">
                        {{ form_label(form.amount) }}
                        <label for="{{ amount_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
                    </div>
                    {{ form_widget(form.amount) }}
                    {{ form_errors(form.amount) }}
                    <input type="checkbox" id="{{ amount_help_id }}" class="modal-toggle hidden" />
                    <div class="modal" role="dialog">
                        <div class="modal-box">
                            <h3 class="font-bold">Amount</h3>
                            <p class="py-2 text-sm">Auto-calculated from the detail items (qty × cost). If the total is 0, the field stays empty.</p>
                            <div class="modal-action">
                                <label for="{{ amount_help_id }}" class="btn btn-primary">Close</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div data-controller="imperial-date">
                    {{ form_label(form.paymentDate) }}
                    {{ form_widget(form.paymentDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                    {{ form_widget(form.paymentDate.year) }}
                    {{ form_widget(form.paymentDate.day) }}
                    {{ form_errors(form.paymentDate.display) }}
                </div>
            </div>

            <div class="col-span-2 grid grid-cols-2 gap-4">
                <div>
                    {{ form_label(form.company) }}
                    {{ form_widget(form.company) }}
                    {{ form_errors(form.company) }}
                </div>
                <div>
                    {{ form_label(form.costCategory) }}
                    {{ form_widget(form.costCategory) }}
                    {{ form_errors(form.costCategory) }}
                </div>
            </div>

            <div class="col-span-2">
                {{ form_label(form.localLaw) }}
                {{ form_widget(form.localLaw) }}
                {{ form_errors(form.localLaw) }}
            </div>

        </fieldset>

        {{ include('cost/_detail_items_form.html.twig', { form: form }) }}

        <fieldset class="fieldset grid grid-cols-1 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Notes</legend>
            <div>
                {{ form_label(form.note) }}
                {{ form_widget(form.note) }}
                {{ form_errors(form.note) }}
            </div>
        </fieldset>

        <button type="submit"
                class="btn btn-outline btn-primary mt-4 mb-4 mr-4"
                {% if not (cost.id ? can_edit : can_create) %} disabled {% endif %}
        >
            Save
        </button>
        <a href="{{ path('app_cost_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form, { render_rest: false }) }}
    
    </div>

{% endblock %}
