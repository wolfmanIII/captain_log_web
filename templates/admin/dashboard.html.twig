{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <style>
        .quick-link-card .label {
            white-space: normal;
            writing-mode: horizontal-tb;
        }
        .quick-link-card {
            min-height: 120px;
        }
    </style>

    <div class="ea-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Pannello di controllo</h1>
            <p class="text-muted mb-0">Link rapidi alle entit√† di contesto e all'indice RAG</p>
        </div>
    </div>

    <div class="row g-3">
        {% for label, url in links %}
            <div class="col-12 col-md-6 col-xl-4">
                <a href="{{ url }}" class="card quick-link-card shadow-sm h-100 text-decoration-none border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <p class="fw-semibold mb-1 label">{{ label }}</p>
                        <span class="text-primary">Apri</span>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
