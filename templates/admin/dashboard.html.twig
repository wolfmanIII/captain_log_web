{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <style>
        .dashboard-card {
            text-decoration: none;
            color: inherit;
            border: 1px solid #e0e3e6;
            border-radius: 0.75rem;
            background: #fff;
            transition: transform 0.1s ease, box-shadow 0.1s ease;
            min-height: 120px;
        }
        .dashboard-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.35rem 1rem rgba(0,0,0,0.08);
        }
    </style>

    <div class="container-fluid px-2 px-lg-0">
        <div class="row mb-4">
            <div class="col-12 col-lg-8">
                <h1 class="h3 mb-1">Pannello di controllo</h1>
                <p class="text-muted mb-0">Link rapidi alle entit√† di contesto e all'indice RAG</p>
            </div>
        </div>

        <div class="row g-3">
            {% for label, url in links %}
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a href="{{ url }}" class="dashboard-card d-flex align-items-center justify-content-between p-3 h-100">
                        <span class="fw-semibold">{{ label }}</span>
                        <span class="text-primary fw-semibold">Apri</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
