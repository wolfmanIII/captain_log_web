<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} SUBSIDY Details
    </legend>

    <div>
        {{ form_label(detail_form.programRef) }}
        {{ form_widget(detail_form.programRef) }}
        {{ form_errors(detail_form.programRef) }}
    </div>
    <div>
        {{ form_label(detail_form.origin) }}
        {{ form_widget(detail_form.origin) }}
        {{ form_errors(detail_form.origin) }}
    </div>
    <div>
        {{ form_label(detail_form.destination) }}
        {{ form_widget(detail_form.destination) }}
        {{ form_errors(detail_form.destination) }}
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.startDate) }}
            {% set sd = detail_form.vars.data is defined ? detail_form.vars.data : null %}
            {% set start_day = sd ? sd.startDay : null %}
            {% set start_year = sd ? sd.startYear : null %}
            {% set start_value = start_day is not null and start_year is not null ? start_day|format('%03d') ~ '/' ~ start_year : '' %}
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            {{ form_errors(detail_form.startDate) }}
        </div>
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.endDate) }}
            {% set end_day = sd ? sd.endDay : null %}
            {% set end_year = sd ? sd.endYear : null %}
            {% set end_value = end_day is not null and end_year is not null ? end_day|format('%03d') ~ '/' ~ end_year : '' %}
            {{ form_widget(detail_form.endDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': end_day ?? '',
                    'data-imperial-date-initial-year': end_year ?? '',
                    'value': end_value,
                }
            }) }}
            {{ form_widget(detail_form.endDate.year) }}
            {{ form_widget(detail_form.endDate.day) }}
            {{ form_errors(detail_form.endDate) }}
        </div>
    </div>

    <div>
        {{ form_label(detail_form.serviceLevel) }}
        {{ form_widget(detail_form.serviceLevel) }}
        {{ form_errors(detail_form.serviceLevel) }}
    </div>
    <div>
        {{ form_label(detail_form.subsidyAmount) }}
        {{ form_widget(detail_form.subsidyAmount) }}
        {{ form_errors(detail_form.subsidyAmount) }}
    </div>
    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-3">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.paymentTerms) }}
            <label for="{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">Define how the subsidy is paid (schedule, milestones, advances, holdbacks).</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div>
            {{ form_label(detail_form.milestones) }}
            {{ form_widget(detail_form.milestones) }}
            {{ form_errors(detail_form.milestones) }}
        </div>
        <div>
            {{ form_label(detail_form.reportingRequirements) }}
            {{ form_widget(detail_form.reportingRequirements) }}
            {{ form_errors(detail_form.reportingRequirements) }}
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        <div>
            {{ form_label(detail_form.nonComplianceTerms) }}
            {{ form_widget(detail_form.nonComplianceTerms) }}
            {{ form_errors(detail_form.nonComplianceTerms) }}
        </div>
        <div>
            {{ form_label(detail_form.proofRequirements) }}
            {{ form_widget(detail_form.proofRequirements) }}
            {{ form_errors(detail_form.proofRequirements) }}
        </div>
        <div>
            {{ form_label(detail_form.cancellationTerms) }}
            {{ form_widget(detail_form.cancellationTerms) }}
            {{ form_errors(detail_form.cancellationTerms) }}
        </div>
    </div>
</fieldset>
