<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} PASSENGERS Details
    </legend>

    <div class="col-span-3 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Passenger carriage record: declared route, departure/arrival, berths, baggage allowances and refund/change conditions.</p>
    </div>

    <div>
        {{ form_label(detail_form.origin) }}
        {{ form_widget(detail_form.origin) }}
        {{ form_errors(detail_form.origin) }}
    </div>
    <div>
        {{ form_label(detail_form.destination) }}
        {{ form_widget(detail_form.destination) }}
        {{ form_errors(detail_form.destination) }}
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set dep_day = data ? data.departureDay : null %}
        {% set dep_year = data ? data.departureYear : null %}
        {% set dep_value = dep_day is not null and dep_year is not null ? dep_day|format('%03d') ~ '/' ~ dep_year : '' %}
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.departureDate) }}
            {{ form_widget(detail_form.departureDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': dep_day ?? '',
                    'data-imperial-date-initial-year': dep_year ?? '',
                    'value': dep_value,
                }
            }) }}
            {{ form_widget(detail_form.departureDate.year) }}
            {{ form_widget(detail_form.departureDate.day) }}
            {{ form_errors(detail_form.departureDate) }}
        </div>

        {% set arr_day = data ? data.arrivalDay : null %}
        {% set arr_year = data ? data.arrivalYear : null %}
        {% set arr_value = arr_day is not null and arr_year is not null ? arr_day|format('%03d') ~ '/' ~ arr_year : '' %}
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.arrivalDate) }}
            {{ form_widget(detail_form.arrivalDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': arr_day ?? '',
                    'data-imperial-date-initial-year': arr_year ?? '',
                    'value': arr_value,
                }
            }) }}
            {{ form_widget(detail_form.arrivalDate.year) }}
            {{ form_widget(detail_form.arrivalDate.day) }}
            {{ form_errors(detail_form.arrivalDate) }}
        </div>
    </div>

    <div>
        {{ form_label(detail_form.classOrBerth) }}
        {{ form_widget(detail_form.classOrBerth) }}
        {{ form_errors(detail_form.classOrBerth) }}
    </div>
    <div>
        {{ form_label(detail_form.qty) }}
        {{ form_widget(detail_form.qty) }}
        {{ form_errors(detail_form.qty) }}
    </div>
    <div class="col-span-3">
        {{ form_label(detail_form.passengerNames) }}
        {{ form_widget(detail_form.passengerNames) }}
        {{ form_errors(detail_form.passengerNames) }}
    </div>
    <div>
        {{ form_label(detail_form.passengerContact) }}
        {{ form_widget(detail_form.passengerContact) }}
        {{ form_errors(detail_form.passengerContact) }}
    </div>
    <div>
        {{ form_label(detail_form.baggageAllowance) }}
        {{ form_widget(detail_form.baggageAllowance) }}
        {{ form_errors(detail_form.baggageAllowance) }}
    </div>
    <div>
        {{ form_label(detail_form.extraBaggage) }}
        {{ form_widget(detail_form.extraBaggage) }}
        {{ form_errors(detail_form.extraBaggage) }}
    </div>
    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-3">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.paymentTerms) }}
            <label for="{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">Ticket/berth payment rules: deposits, balance on boarding, refunds or fees.</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-span-3">
        {{ form_label(detail_form.refundChangePolicy) }}
        {{ form_widget(detail_form.refundChangePolicy) }}
        {{ form_errors(detail_form.refundChangePolicy) }}
    </div>
</fieldset>
