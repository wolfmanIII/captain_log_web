{% extends 'base.html.twig' %}

{% block title %}Captain Log - Income{% endblock %}

{% block pageContent %}

    {{ form_start(form) }}

    {{ form_widget(form._token) }}

    <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
        <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Contract</legend>

        <div class="col-span-3">
            <div class="alert alert-info alert-outline shadow-sm w-full">
                <div class="flex items-center gap-3">
                    {% include 'icons/income.html.twig' %}
                    <div>
                        <h3 class="font-semibold">Log your income</h3>
                        <p class="text-sm opacity-80">Contracts, freight and charter: keep them tidy here to know when you can fund the next jump.</p>
                    </div>
                </div>
            </div>
        </div>

        {% if income.id %}
            <div class="col-span-3">
                <label class="label">Code</label>
                <div><b>{{ income.code }}</b></div>
            </div>
        {% endif %}

        <div class="col-span-2">
            <label class="label">Title</label>
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="col-span-1">
            <label class="label">Local Law</label>
            {{ form_widget(form.localLaw) }}
            {{ form_errors(form.localLaw) }}
        </div>

        <div class="col-span-1">
            <label class="label">Company</label>
            {{ form_widget(form.company) }}
            {{ form_errors(form.company) }}
        </div>

        <div class="col-span-1">
            <label class="label">Category</label>
            {{ form_widget(form.incomeCategory) }}
            {{ form_errors(form.incomeCategory) }}
        </div>

        <div class="col-span-1">
            <label class="label">Ship</label>
            {{ form_widget(form.ship) }}
            {{ form_errors(form.ship) }}
        </div>

        <div class="col-span-1">
            <label class="label">Signing Location</label>
            {{ form_widget(form.signingLocation) }}
            {{ form_errors(form.signingLocation) }}
        </div>

        <div class="col-span-1">
            <label class="label">Signing Day</label>
            {{ form_widget(form.signingDay) }}
            {{ form_errors(form.signingDay) }}
        </div>

        <div class="col-span-1">
            <label class="label">Signing Year</label>
            {{ form_widget(form.signingYear) }}
            {{ form_errors(form.signingYear) }}
        </div>

        <div class="col-span-1">
            <label class="label">Amount</label>
            {{ form_widget(form.amount) }}
            {{ form_errors(form.amount) }}
        </div>

        <div class="col-span-1">
            <label class="label">Payment Day</label>
            {{ form_widget(form.paymentDay) }}
            {{ form_errors(form.paymentDay) }}
        </div>

        <div class="col-span-1">
            <label class="label">Payment Year</label>
            {{ form_widget(form.paymentYear) }}
            {{ form_errors(form.paymentYear) }}
        </div>

        <div class="col-span-1">
            <label class="label">Expiration Day</label>
            {{ form_widget(form.expirationDay) }}
            {{ form_errors(form.expirationDay) }}
        </div>

        <div class="col-span-1">
            <label class="label">Expiration Year</label>
            {{ form_widget(form.expirationYear) }}
            {{ form_errors(form.expirationYear) }}
        </div>
    </fieldset>

    {% set detail_configs = {
        'charterDetails': {
            'title': 'CHARTER Details',
            'fields': ['areaOrRoute','purpose','manifestSummary','startDay','startYear','endDay','endYear','paymentTerms','deposit','extras','damageTerms','cancellationTerms']
        },
        'subsidyDetails': {
            'title': 'SUBSIDY Details',
            'fields': ['programRef','origin','destination','startDay','startYear','endDay','endYear','serviceLevel','subsidyAmount','paymentTerms','milestones','reportingRequirements','nonComplianceTerms','proofRequirements','cancellationTerms']
        },
        'freightDetails': {
            'title': 'FREIGHT Details',
            'fields': ['origin','destination','pickupDay','pickupYear','deliveryDay','deliveryYear','cargoDescription','cargoQty','declaredValue','paymentTerms','liabilityLimit','cancellationTerms']
        },
        'passengersDetails': {
            'title': 'PASSENGERS Details',
            'fields': ['origin','destination','departureDay','departureYear','arrivalDay','arrivalYear','classOrBerth','qty','passengerNames','passengerContact','baggageAllowance','extraBaggage','paymentTerms','refundChangePolicy']
        },
        'servicesDetails': {
            'title': 'SERVICES Details',
            'fields': ['location','vesselId','serviceType','requestedBy','startDay','startYear','endDay','endYear','workSummary','partsMaterials','risks','paymentTerms','extras','liabilityLimit','cancellationTerms']
        },
        'insuranceDetails': {
            'title': 'INSURANCE Details',
            'fields': ['claimId','policyNumber','incidentRef','incidentDay','incidentYear','incidentLocation','incidentCause','lossType','verifiedLoss','deductible','paymentTerms','acceptanceEffect','subrogationTerms','coverageNotes']
        },
        'mailDetails': {
            'title': 'MAIL Details',
            'fields': ['runId','authorityRef','origin','destination','dispatchDay','dispatchYear','deliveryDay','deliveryYear','mailType','packageCount','totalMass','securityLevel','sealCodes','paymentTerms','proofOfDelivery','liabilityLimit']
        },
        'interestDetails': {
            'title': 'INTEREST Details',
            'fields': ['receiptId','accountRef','instrument','principal','interestRate','startDay','startYear','endDay','endYear','calcMethod','interestEarned','netPaid','paymentTerms','disputeWindow']
        },
        'tradeDetails': {
            'title': 'TRADE Details',
            'fields': ['location','transferPoint','transferCondition','goodsDescription','qty','grade','batchIds','unitPrice','paymentTerms','deliveryMethod','deliveryDay','deliveryYear','asIsOrWarranty','warrantyText','claimWindow','returnPolicy']
        },
        'salvageDetails': {
            'title': 'SALVAGE Details',
            'fields': ['claimId','caseRef','source','siteLocation','recoveredItemsSummary','qtyValue','hazards','paymentTerms','splitTerms','rightsBasis','awardTrigger','disputeProcess']
        },
        'prizeDetails': {
            'title': 'PRIZE Details',
            'fields': ['prizeId','caseRef','jurisdiction','legalBasis','prizeDescription','estimatedValue','disposition','paymentTerms','shareSplit','awardTrigger']
        },
        'contractDetails': {
            'title': 'CONTRACT Details',
            'fields': ['jobType','location','objective','successCondition','startDay','startYear','deadlineDay','deadlineYear','bonus','expensesPolicy','deposit','restrictions','confidentialityLevel','failureTerms','cancellationTerms']
        },
    } %}

    {% for detail_name, config in detail_configs %}
        {% if form[detail_name] is defined %}
            {% include 'income/_detail_section.html.twig' with {
                detail_form: form[detail_name],
                title: config.title,
                fields: config.fields
            } %}
        {% endif %}
    {% endfor %}

    <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
        <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Note</legend>
        <div class="col-span-3">
            <label class="label">Note</label>
            {{ form_widget(form.note) }}
            {{ form_errors(form.note) }}
        </div>
    </fieldset>

    {% if income.id %}
        <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border border-warning rounded w-250">
            <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Cancellation</legend>
            <div class="col-span-3">
                <div class="grid grid-cols-3 gap-4 items-end">
                    <div>
                        <label class="label">Cancel Day</label>
                        {{ form_widget(form.cancelDay) }}
                        {{ form_errors(form.cancelDay) }}
                    </div>
                    <div>
                        <label class="label">Cancel Year</label>
                        {{ form_widget(form.cancelYear) }}
                        {{ form_errors(form.cancelYear) }}
                    </div>
                    <div class="alert alert-warning alert-outline">
                        Fill only if the contract was canceled: this date closes its validity window
                    </div>
                </div>
            </div>
        </fieldset>
    {% endif %}

    <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">
        Save
    </button>
    <a href="{{ path('app_income_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

    {{ form_end(form, { render_rest: false }) }}

{% endblock %}
